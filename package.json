{
  "name": "web-sportzoo",
  "private": true,
  "scripts": {
    "dev": "npm run external-data && next",
    "build": "npm run external-data && next build",
    "start": "(npm run external-data:dev && next dev); npm run external-data:dev-cleanup",
    "cypress": "cypress open",
    "external-data": "npm run exec src/bin/external-data.ts",
    "external-data:dev": "npm run exec:dev src/bin/external-data.ts && git update-index --skip-worktree -- src/data/*.json",
    "external-data:dev-cleanup": "git update-index --no-skip-worktree -- src/data/*.json && git co -- src/data/*.json",
    "exec": "NODE_ENV=./.env ts-node -P tsconfig.json -r dotenv/config -r next/dist/server/node-polyfill-fetch.js -T",
    "exec:dev": "NODE_ENV=./.env ts-node -P tsconfig.json -r dotenv/config -r next/dist/server/node-polyfill-fetch.js"
  },
  "dependencies": {
    "@splidejs/react-splide": "^0.7.7",
    "next": "latest",
    "postcss-import": "14.1.0",
    "prettier": "^2.6.2",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-image-lightbox": "^5.1.4",
    "react-scripts": "5.0.1",
    "ts-node": "^10.8.1",
    "typescript": "4.6.4",
    "react-text-ellipsis": "1.6.0"
  },
  "devDependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "@types/node": "17.0.33",
    "@types/react": "18.0.9",
    "autoprefixer": "10.4.7",
    "postcss": "8.4.13",
    "tailwindcss": "3.0.24"
  }
}